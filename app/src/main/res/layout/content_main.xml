<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/content_main"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context="overhead.caeii2017.MainActivity"
tools:showIn="@layout/app_bar_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="517dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/instagram"
                    android:layout_marginLeft="23dp"
                    android:layout_marginStart="23dp"
                    android:id="@+id/instagramImage"
                    android:layout_alignTop="@+id/twitterImage"
                    android:layout_toRightOf="@+id/twitterImage"
                    android:layout_toEndOf="@+id/twitterImage" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/twitter"
                    android:id="@+id/twitterImage"
                    android:layout_alignTop="@+id/facebookImage"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/facebook"
                    android:layout_marginBottom="18dp"
                    android:id="@+id/facebookImage"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/twitterImage"
                    android:layout_toStartOf="@+id/twitterImage"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/logomenuprincipal"
                    android:layout_marginTop="28dp"
                    android:id="@+id/imageView10"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/logomenuprincipal2"
                    android:id="@+id/imageView11"
                    android:layout_alignBottom="@+id/instagramImage"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="48dp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>


