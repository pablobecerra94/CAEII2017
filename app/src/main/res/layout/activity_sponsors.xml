<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sponsors"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="overhead.caeii2017.Sponsors.SponsorsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/exclusiveSponsorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="20dp"
                android:text="@string/exclusiveSponsor" />

            <ImageView
                android:id="@+id/techint"
                android:layout_width="match_parent"
                android:layout_height="265dp"
                android:padding="10dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/techint" />

            <TextView
                android:id="@+id/sponsorsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:text="@string/sponsors" />

            <ImageView
                android:id="@+id/pae"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="0.53"
                android:padding="10dp"
                app:srcCompat="@drawable/pae" />

            <ImageView
                android:id="@+id/unilever"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="10dp"
                app:srcCompat="@drawable/unilever" />

            <ImageView
                android:id="@+id/femsa"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="10dp"
                app:srcCompat="@drawable/femsa" />

            <ImageView
                android:id="@+id/cnea"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:padding="10dp"
                app:srcCompat="@drawable/cnea" />

            <ImageView
                android:id="@+id/penaflor"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:padding="10dp"
                app:srcCompat="@drawable/penaflor" />

            <ImageView
                android:id="@+id/arcor"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:padding="10dp"
                app:srcCompat="@drawable/arcor" />

            <ImageView
                android:id="@+id/mercadolibre"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:padding="20dp"
                app:srcCompat="@drawable/mercadolibre" />

            <ImageView
                android:id="@+id/dana"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:padding="20dp"
                app:srcCompat="@drawable/dana" />

            <ImageView
                android:id="@+id/pura"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:padding="20dp"
                app:srcCompat="@drawable/pura" />

        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            />

    </android.support.design.widget.AppBarLayout>

</RelativeLayout>
