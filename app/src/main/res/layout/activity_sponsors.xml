<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sponsors"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="overhead.caeii2017.SponsorsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/exclusiveSponsorTextView"
                android:text="@string/exclusiveSponsor"
                android:layout_weight="1"
                android:gravity="center" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/techint"
                android:id="@+id/techint" />

            <TextView
                android:text="@string/sponsors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sponsorsTextView"
                android:gravity="center" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:srcCompat="@drawable/pae"
                android:id="@+id/pae" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="165dp"
                app:srcCompat="@drawable/cnea"
                android:id="@+id/cnea" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="107dp"
                app:srcCompat="@drawable/arcor"
                android:id="@+id/arcor" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="165dp"
                app:srcCompat="@drawable/penaflor"
                android:id="@+id/penaflor" />
        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </LinearLayout>

</RelativeLayout>
