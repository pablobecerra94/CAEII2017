<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/interest_link"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="overhead.caeii2017.Actividades.ActivitiesActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/appbar"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/aareiiImage"
                android:layout_width="match_parent"
                android:layout_height="216dp"
                app:srcCompat="@drawable/aareii2" />

            <ImageView
                android:id="@+id/encontramasImage"
                android:layout_width="match_parent"
                android:layout_height="169dp"
                app:srcCompat="@drawable/emas" />

            <ImageView
                android:id="@+id/turismoBuenosAiresImage"
                android:layout_width="match_parent"
                android:layout_height="202dp"
                app:srcCompat="@drawable/turismo" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>